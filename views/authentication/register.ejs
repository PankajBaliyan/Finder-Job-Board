<%- include('../partials/header.ejs') %>

    <section class="pt-5">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <form action="/register" method="post">
                                        <p>Please register to your account</p>

                                        <div class="form-outline mb-4">
                                            <input type="text" id="name" class="form-control"
                                                placeholder="Name" name="name" />
                                            <label class="form-label" for="name"></label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="email" id="email" class="form-control"
                                                placeholder="Email address" name="username" />
                                            <label class="form-label" for="email"></label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="text" id="cgpa" class="form-control" name="cgpa"
                                                placeholder="CGPA" />
                                            <label class="form-label" for="cgpa"></label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="text" id="password" class="form-control" name="password"
                                                placeholder="Password" />
                                            <label class="form-label" for="password"></label>
                                        </div>

                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"
                                                type="submit">Register</button>
                                        </div>

                                        <div class="d-flex align-items-center justify-content-center pb-4">
                                            <p class="mb-0 me-2">Already have an account?</p>
                                            <a class="btn btn-outline-danger" href="/login">Login</a>
                                        </div>

                                    </form>

                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">We are more than just a company</h4>
                                    <p class="small mb-0">This project is designed to help job seekers and employers
                                        connect through a platform that offers job postings, job searching, and testing
                                        features. The platform has two modes, one for students and the other for
                                        administrators. Job seekers can register and log in to their account to search
                                        for available jobs, apply for them, and take relevant tests. </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer.ejs') %>