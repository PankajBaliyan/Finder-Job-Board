<%- include('./partials/header.ejs') %>
<div class="d-flex justify-content-around mt-3 align-items-center">
    <h2>Available Job's</h2>
    <a class="btn btn-danger" href="/jobs/new">Add a new job</a>

    <form action="/jobs" method="get">
        <input type="text" name="search">
        <input type="submit" value="search">
    </form>
</div>
<hr>
<div class="d-flex flex-wrap justify-content-center">

    <% for(let job of foundJobs){ %>
        <div class="card border-warning mb-3 mx-2" style="width: 23%;">
            <div class="card-header"><%= job.type %></div>
            <div class="card-body d-flex flex-column justify-content-between">
                <h5 class="card-title"><%= job.name %></h5>
                <p class="card-text"><a class="btn btn-success" href="/jobs/<%= job._id %>"> Read More</a></p>
            </div>
        </div>
        <% } %>
</div>

<%- include('./partials/footer.ejs') %>