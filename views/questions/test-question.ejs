<%- include('../partials/header.ejs') %>
    <div class="row">
        <div class="col-5 m-auto">

            <h2>Test for job : <%= job.name %></h2>

            <form action="/jobs/<%= job._id %>/test" method="post">
                <% for(let i in job.questions) { %>
                    <div><%= job.questions[i].description %></div>
                    <div class="form-check">
                        <input required class="form-check-input" type="radio" name="answers[<%= i %>]" id="option1" value="Option1">
                        <label class="form-check-label" for="option1">
                          <%= job.questions[i].option1 %>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="answers[<%= i %>]" id="option2" value="Option2">
                        <label class="form-check-label" for="option2">
                          <%= job.questions[i].option2 %>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="answers[<%= i %>]" id="option3" value="Option3">
                        <label class="form-check-label" for="option3">
                          <%= job.questions[i].option3 %>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="answers[<%= i %>]" id="option4" value="Option4">
                        <label class="form-check-label" for="option4">
                          <%= job.questions[i].option4 %>
                        </label>
                    </div>
                <% } %>

                <div>
                    <input class="btn btn-primary" type="submit" value="Add a new job">
                </div>
            </form>
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>